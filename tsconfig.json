{
	"compilerOptions": {
		"target": "ES6",
		"module": "CommonJS",
		"outDir": "./js",
		"baseUrl": "./src",
		"inlineSourceMap": true,
		"inlineSources": true,
		"noImplicitAny": true,
		"noImplicitReturns": true,
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"removeComments": true,
		"strict": false
	},
	"include": [
		"src/**/*"
	]
}